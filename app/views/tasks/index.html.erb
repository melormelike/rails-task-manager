<h1>Task Lists</h1>

<div class="container">

  <% @tasks.each do |task| %>
  <div class="row>
    <div class="col-sm-6>
  📝 <%= task['title'] %> <%= task['details'] %> - <%= task[:completed] %> <%= link_to "See the task", task_path(task)%> </div>
  <%end%>
  </div>
</div>

<div class="container" id="addlistbutton">

  <%= link_to "Add a new task", new_task_path %>
</div>
